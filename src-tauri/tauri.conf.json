{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "oPaper",
  "version": "0.1.0",
  "identifier": "com.juzisang.oPaper",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "oPaper",
        "width": 1024,
        "height": 768,
        "resizable": true,
        "maximized": false
      }
    ],
    "security": {
      "csp": "default-src 'self' ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost data:; frame-src blob: asset:",
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPCACHE/**", "$APPDATA/**", "$RESOURCE/**", "**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
